[Unit]
Description=Bone Health Tracker
ConditionPathExists=/home/bonehealthtracker/bonehealthtracker
After=network.target

[Service]
Type=simple
User=bonehealthtracker
Group=bonehealthtracker
AmbientCapabilities=CAP_NET_BIND_SERVICE

Restart=always
RestartSec=10
StartLimitInterval=60
Environment="FRAG_ENV=production"

LimitNOFILE=1024

WorkingDirectory=/home/bonehealthtracker/bonehealthtracker
ExecStart=/home/bonehealthtracker/bonehealthtracker/bonehealthtracker

PermissionsStartOnly=true
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=bonehealthtracker


[Install]
WantedBy=multi-user.target